<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
    <CodeSnippet Format="1.0.0">
        <Header>
            <Title>TestClass</Title>
            <Author>Jango Hemmes</Author>
            <Description>Boilerplate for a new testclass</Description>
            <Shortcut>testclass</Shortcut>
        </Header>
        <Snippet>
            <Code Language="CSharp">
                <![CDATA[using System;
using System.Diagnostics.CodeAnalysis;
using NSubstitute;
using NUnit.Framework;

namespace $MainNamespace$.Tests.$SubNamespace$
{
    [TestFixture]
    [ExcludeFromCodeCoverage]
    public class $SUT$Tests
    {
        $selected$
        $end$
    }
}]]>
            </Code>
            <Declarations>
                <Literal>
                    <ID>MainNamespace</ID>
                    <ToolTip>The main namespace of the SUT</ToolTip>
                </Literal>
                <Literal>
                    <ID>SubNamespace</ID>
                    <ToolTip>The main namespace of the SUT</ToolTip>
                </Literal>
                <Literal>
                    <ID>SUT</ID>
                    <ToolTip>The name of the System Under Test</ToolTip>
                </Literal>
            </Declarations>
        </Snippet>
    </CodeSnippet>
</CodeSnippets>